[foreman]
name=Foreman {{ foreman_version }}
baseurl=http://yum.theforeman.org/releases/{{ foreman_version }}/el{{ ansible_distribution_major_version }}/$basearch
enabled=1
gpgcheck=1
gpgkey=http://yum.theforeman.org/releases/{{ foreman_version }}/RPM-GPG-KEY-foreman

[foreman-source]
name=Foreman {{ foreman_version }} - source
baseurl=http://yum.theforeman.org/releases/{{ foreman_version }}/el{{ ansible_distribution_major_version }}/source
enabled=0
gpgcheck=1
gpgkey=http://yum.theforeman.org/releases/{{ foreman_version }}/RPM-GPG-KEY-foreman
